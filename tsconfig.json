{
  "include": ["lib", "test"],
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "declarationDir": "./dist",
  },
  "typedocOptions": {
    "out": "docs",
    "entryPointStrategy": "expand",
    "entryPoints": ["./lib/index.ts"],
    "exclude": ["test/**", "dist/**", "build/**", "docs/**", "examples/**", "integration_tests/**"]
  }
}
